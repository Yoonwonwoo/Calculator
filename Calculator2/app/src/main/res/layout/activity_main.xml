<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#fff"
        android:textSize="50dp"
        android:gravity="bottom|right"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom|right"
        android:text="0"
        android:textColor="#fff"
        android:textSize="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#666565"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="AC"
            android:textSize="40dp" />

        <Button
            android:id="@+id/con"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#666565"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="+/-"
            android:textSize="40dp" />

        <Button
            android:id="@+id/per"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#666565"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="%"
            android:textSize="40dp" />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#FF6F00"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="รท"
            android:textColor="#fff"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="7"
            android:textSize="40dp" />

        <Button
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="8"
            android:textSize="40dp" />

        <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="9"
            android:textSize="40dp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#FF6F00"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="ร"
            android:textColor="#fff"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="4"
            android:textSize="40dp" />

        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="5"
            android:textSize="40dp" />

        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="6"
            android:textSize="40dp" />

        <Button
            android:id="@+id/min"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#FF6F00"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="-"
            android:textColor="#fff"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="1"
            android:textSize="40dp" />

        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="2"
            android:textSize="40dp" />

        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="3"
            android:textSize="40dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#FF6F00"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="+"
            android:textColor="#fff"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="2"
            android:background="#A39E9E"
            android:fontFamily="sans-serif"
            android:gravity="center|left"
            android:text="0"
            android:textSize="40dp"
            android:paddingLeft="40dp"/>


        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#A39E9E"
            android:fontFamily="bold"
            android:gravity="center"
            android:text="."
            android:textSize="50dp" />

        <Button
            android:id="@+id/res"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#FF6F00"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="="
            android:textColor="#fff"
            android:textSize="40dp" />
    </LinearLayout>


</LinearLayout>